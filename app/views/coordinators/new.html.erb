<% if @coordinator.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@coordinator.errors.count, "error") %> prohibited this registry from being saved:</h2>
    <ul>
      <% @coordinator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-container">
  <h1>New Coordinator</h1>
  <%= form_with model: @coordinator, url: coordinators_path do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <br>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <br>
    <div>
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number %>
    </div>
    <br>
    <div>
      <%= form.submit 'Create Coordinator', class: 'link' %>
    </div>
  <% end %>
</div>
<br>
<%= link_to 'Back', coordinators_path, class: 'button' %>

