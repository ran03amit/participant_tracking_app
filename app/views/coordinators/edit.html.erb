<% if @coordinator.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@coordinator.errors.count, "error") %> prohibited this coordinator from being saved:</h2>
    <ul>
      <% @coordinator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-container">
  <h1>Edit Coordinator</h1>
  <%= form_with(model: @coordinator, url: coordinator_path(@coordinator), method: :patch) do |form| %>
    

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="field">
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number %>
    </div>

    <div class="actions">
      <%= form.submit 'Update Coordinator', class: 'button' %>
    </div>
  <% end %>
</div>
<br>
